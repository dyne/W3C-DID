{
  "name": "@dyne/did",
  "version": "1.0.0",
  "description": "Create and manage did:dyne identifiers",
  "main": "dist/main/index.js",
  "typings": "dist/main/index.d.ts",
  "author": "Matteo Cristino <matteo@dyne.org>",
  "license": "AGPL-3.0",
  "keywords": [
    "did", "w3c-did", "decentralized-identity"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:clean": "rimraf dist/*",
    "build:copycontracts": "mkdirp dist/main/client/v1 && cp -r ../../client/v1/* dist/main/client/v1/",
    "build:typescript": "tsc -p tsconfig.json",
    "test": "yarn ava dist/main/index.spec.js"
  },
  "files": [
    "dist/main",
    "../../client/v1/*.zen",
    "../../client/v1/*.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dyne/W3C-DID.git"
  },
  "bugs": {
    "url": "https://github.com/dyne/W3C-DID/issues"
  },
  "homepage": "https://github.com/dyne/W3C-DID#readme",
  "dependencies": {
    "@types/node": "^18.11.18",
    "ava": "^5.1.1",
    "axios": "^1.2.3",
    "fs": "^0.0.1-security",
    "mkdirp": "^2.1.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.1.2",
    "typescript": "^4.9.4",
    "zenroom": "^2.16.3"
  },
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "dotenv": "^16.0.3",
    "ts-node": "^10.9.1"
  }
}
